<Container
    xmlns="urn:schemas-cosylab-com:Container:1.0"
    xmlns:cdb="urn:schemas-cosylab-com:CDB:1.0"
    xmlns:log="urn:schemas-cosylab-com:LoggingConfig:1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:schemas-cosylab-com:Container:1.0
    http://www.eso.org/schemas/ACS/Container.xsd"
           Timeout="360" 
           UseIFR="1" 
           ManagerRetry="10" 
           Recovery="0"
           ImplLang="java">
    <Autoload/>
  <LoggingConfig centralizedLogger="Log"
                 minLogLevel="4"
                 minLogLevelLocal="4"
                 dispatchPacketSize="10"
                 immediateDispatchLevel="5"
                 flushPeriodSeconds="3">
    <log:_ Name="jacorb@ACC/javaContainer" minLogLevel="5" minLogLevelLocal="5" />
  </LoggingConfig>
</Container>
