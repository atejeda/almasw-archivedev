#!/usr/bin/env bash

WS=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

TESTC_LIBS=" https://pypi.python.org/packages/source/a/airspeed/airspeed-0.4.2dev-20131111.tar.gz \
			 https://pypi.python.org/packages/source/p/psutil/psutil-2.1.3.tar.gz \
			 http://pypi.python.org/packages/source/c/coverage/coverage-3.7.1.tar.gz"

rm -rf $WS/airspeed-0.4.2dev_20131111-py2.6.egg 
rm -rf $WS/coverage-3.7.1-py2.6-linux-x86_64.egg 
rm -rf $WS/psutil-2.1.3-py2.6-linux-x86_64.egg
rm -rf easy-install.pth site.py site.pyc install

for TAR in $TESTC_LIBS; do
	PYTHONPATH=$WS easy_install-2.6 -d $WS $TAR
done;